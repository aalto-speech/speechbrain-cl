[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503,W1203,W1514,C3001,B950,S101,D100,E731,D103,C0114
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores =
    tests/*:S101
    src/cl/info/*:D100,D101,D102,D103
    src/cl/vad/*:D100,D101,D102,D103,D300
    src/cl/asr_models/*:E1101,D416, D102
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated

[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503,W1203,W1514,C3001,B950,S101,D100,E731,D103,C0114,D205,C901,RST213,RST215,N803
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores =
    tests/*:S101
    src/cl/info/*:D100,D101,D102,D103,E741,E302
    src/cl/vad/*:D100,D101,D102,D103,D104,F401,D300
    src/cl/utils/*:E741
    src/cl/asr_models/*:E1101,D416,D101,D102,D107,N801
    src/cl/*/__init__.py:F401,N814,D104
    recipes/*/*/*/*:*
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
